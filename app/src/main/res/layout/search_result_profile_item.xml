<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/searchResultItemProfilePhotoView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        fresco:roundAsCircle="true"
        />

    <TextView
        android:id="@+id/searchResultProfileItemUsernameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/searchResultItemProfilePhotoView"
        app:layout_constraintTop_toTopOf="@+id/searchResultItemProfilePhotoView" />

    <TextView
        android:id="@+id/searchResultProfileItemProfilenameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="10dp"
        android:textColor="@color/light_gray"
        android:text="\@profilename"
        app:layout_constraintStart_toStartOf="@+id/searchResultProfileItemUsernameView"
        app:layout_constraintTop_toBottomOf="@+id/searchResultProfileItemUsernameView" />
</androidx.constraintlayout.widget.ConstraintLayout>